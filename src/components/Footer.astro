---
import { SITE_NAME } from "../config";
import { socialLinks } from "../data";
---

<footer class="relative z-[3] mt-32">
	<!-- Top CTA Section -->
	<div class="px-6 md:px-8 lg:px-16 mb-20">
		<div
			class="relative overflow-hidden border border-white/[0.06] rounded-sm p-8 md:p-16 text-center"
		>
			<!-- Grid inside CTA -->
			<div
				class="absolute inset-0 pointer-events-none"
				style="background-image: linear-gradient(to right, rgba(255,255,255,0.03) 1px, transparent 1px), linear-gradient(to bottom, rgba(255,255,255,0.03) 1px, transparent 1px); background-size: 60px 60px; mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 20%, transparent 70%); -webkit-mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black 20%, transparent 70%);"
			>
			</div>
			<!-- Glow -->
			<div
				class="absolute inset-0 pointer-events-none"
				style="background: radial-gradient(ellipse 50% 50% at 50% 50%, rgba(255,255,255,0.04) 0%, transparent 70%);"
			>
			</div>

			<div class="relative z-10">
				<p
					class="text-micro uppercase text-white/20 tracking-[0.3em] mb-4"
				>
					Get in touch
				</p>
				<h3
					class="font-display font-extrabold text-display-md uppercase mb-6"
				>
					Let's Work<br />Together
				</h3>
				<p
					class="text-sm text-white/35 max-w-md mx-auto mb-10 leading-relaxed"
				>
					I'm always open to discussing new opportunities, interesting
					projects, and creative collaborations.
				</p>
				<a
					href="mailto:sarveshrane2000@gmail.com"
					class="inline-flex items-center gap-3 px-8 py-3 border border-white/10 hover:border-white/30 bg-white/[0.03] hover:bg-white/[0.08] transition-all duration-400 rounded-sm group"
				>
					<span
						class="text-micro uppercase text-white/60 group-hover:text-white tracking-wider transition-colors duration-400"
						>Say Hello</span
					>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="14"
						height="14"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="1.5"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="text-white/30 group-hover:text-white group-hover:translate-x-1 transition-all duration-400"
					>
						<line x1="5" y1="12" x2="19" y2="12"></line>
						<polyline points="12 5 19 12 12 19"></polyline>
					</svg>
				</a>
			</div>
		</div>
	</div>

	<!-- Footer columns -->
	<div class="border-t border-white/[0.06]">
		<div class="px-6 md:px-8 lg:px-16 py-12 md:py-16">
			<div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-4 mb-16">
				<!-- Brand -->
				<div class="md:col-span-1">
					<p class="font-display font-bold text-lg mb-3">
						{SITE_NAME}
					</p>
					<p class="text-sm text-white/25 leading-relaxed max-w-xs">
						Building scalable software & pushing code since 2019.
					</p>
				</div>
				<!-- Navigation -->
				<div>
					<p
						class="text-micro uppercase text-white/20 mb-4 tracking-wider"
					>
						Navigation
					</p>
					<div class="flex flex-col gap-2">
						<a
							href="#"
							class="text-sm text-white/35 hover:text-white transition-colors duration-300 w-fit"
							>Home</a
						>
						<a
							href="#work-section"
							class="text-sm text-white/35 hover:text-white transition-colors duration-300 w-fit"
							>Work</a
						>
						<a
							href="#about-section"
							class="text-sm text-white/35 hover:text-white transition-colors duration-300 w-fit"
							>About</a
						>
					</div>
				</div>
				<!-- Socials -->
				<div>
					<p
						class="text-micro uppercase text-white/20 mb-4 tracking-wider"
					>
						Connect
					</p>
					<div class="flex flex-col gap-2">
						{
							socialLinks.map((social) => (
								<a
									href={social.link}
									target="_blank"
									rel="noopener noreferrer"
									class="text-sm text-white/35 hover:text-white transition-colors duration-300 w-fit"
								>
									{social.title}
								</a>
							))
						}
					</div>
				</div>
				<!-- Info -->
				<div class="md:text-right">
					<p
						class="text-micro uppercase text-white/20 mb-4 tracking-wider"
					>
						Info
					</p>
					<p class="text-sm text-white/35">India</p>
					<p class="text-sm text-white/25 mt-1">
						Available for opportunities
					</p>
					<div class="flex md:justify-end items-center gap-2 mt-3">
						<span
							class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"
						></span>
						<span class="text-micro text-emerald-500/70 uppercase"
							>Open to work</span
						>
					</div>
				</div>
			</div>

			<!-- Bottom bar -->
			<div class="h-px bg-white/[0.04] mb-6"></div>
			<div
				class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4"
			>
				<p class="text-micro uppercase text-white/15">
					&copy; {new Date().getFullYear()} Sarvesh Rane
				</p>
				<p class="text-micro uppercase text-white/10">
					Crafted with precision
				</p>
			</div>
		</div>
	</div>
</footer>

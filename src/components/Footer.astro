---
import { SITE_NAME } from "../config";
import Wrapper from "./Wrapper.astro";

const links = [
	{ href: "/", label: "Home" },
	{ href: "/work/", label: "Work" },
	{ href: "/about/", label: "About" },
];
---

<Wrapper
	tagName="footer"
	content_classlist={["lg:px-2 px-1", "py-0.5"]}
	wrapper_classlist={["md:px-0 px-1"]}
>
	<footer class="xl:container mx-auto">
		<div
			class="flex md:flex-row flex-col justify-between md:gap-3 text-base"
		>
			<Wrapper tagName="sitename" content_classlist={["px-1", "py-1"]}>
				<h4 class="font-bold text-base"><a href="/">{SITE_NAME}</a></h4>
			</Wrapper>
			<Wrapper tagName="credits" content_classlist={["px-1", "py-1"]}>
				<div class="flex items-center md:justify-end flex-1 gap-2">
					Made with <span class="text-pink-600 mt-0.5"
						><svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 256 256"
							><g fill="currentColor"
								><path
									d="M232 94c0 66-104 122-104 122S24 160 24 94a54 54 0 0 1 54-54c22.59 0 41.94 12.31 50 32c8.06-19.69 27.41-32 50-32a54 54 0 0 1 54 54Z"
									opacity=".2"></path><path
									d="M178 32c-20.65 0-38.73 8.88-50 23.89C116.73 40.88 98.65 32 78 32a62.07 62.07 0 0 0-62 62c0 70 103.79 126.66 108.21 129a8 8 0 0 0 7.58 0C136.21 220.66 240 164 240 94a62.07 62.07 0 0 0-62-62Zm-50 174.8C109.74 196.16 32 147.69 32 94a46.06 46.06 0 0 1 46-46c19.45 0 35.78 10.36 42.6 27a8 8 0 0 0 14.8 0c6.82-16.67 23.15-27 42.6-27a46.06 46.06 0 0 1 46 46c0 53.61-77.76 102.15-96 112.8Z"
								></path></g
							></svg
						></span
					> by Sarvesh Rane
				</div>
			</Wrapper>
		</div>
		<Wrapper
			tagName="copyright"
			content_classlist={["text-center", "text-gray-500"]}
		>
			<p class="text-xs flex items-center justify-center gap-1">
      <span class="mt-1">&copy;</span> Sarvesh, {new Date().getFullYear()} | All rights reserved
			</p>
		</Wrapper>
	</footer>
</Wrapper>

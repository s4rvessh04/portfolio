---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

import { dataCurrently, socialLinks } from "../data";
---

<Layout>
	<main class="container mx-auto py-4 md:px-6 px-3 md:mt-14 mt-3">
		<div class="lg:grid lg:grid-cols-2">
			<div>
				<div>
					<Card label={"intro"}>
						<div
							class="font-bold md:text-4xl text-3xl md:mb-6 mb-3"
						>
							Hi!
						</div><h1 class="font-bold md:text-6xl text-5xl">
							I&rsquo;m Sarvesh Rane
						</h1>
					</Card>
				</div>
				<div class="md:mt-20 mt-10">
					<Card label={"currently"}>
						<ul>
							{
								dataCurrently.map((item) => (
									<li class="md:text-4xl text-3xl md:mb-8 mb-5 text-neutral-600">
										{item.title}
									</li>
								))
							}
						</ul>
					</Card>
				</div>
			</div>
			<div class="lg:mt-0 mt-20">
				<Card
					label={"socials"}
					labelDirection={"right"}
					labelClasses={""}
				>
					<ul class="flex flex-col items-end">
						{
							socialLinks.map((item) => (
								<li class="md:text-4xl text-3xl md:mb-8 mb-5 text-neutral-600 hover:text-gray-800 duration-200 group">
									<a
										href={item.link}
										target="_blank"
										class="flex group-hover:tracking-widest duration-100 ease-in-out"
									>
										<span class="group-hover:-translate-x-3 duration-200 ease-out">
											&lt;
										</span>
										<span>{item.title}</span>
										<span class="group-hover:translate-x-3 duration-200 ease-out">
											&gt;
										</span>
									</a>
								</li>
							))
						}
					</ul>
				</Card>
			</div>
		</div>
	</main>
</Layout>

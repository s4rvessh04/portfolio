---
import { SITE_NAME } from "../config";
import Navlink from "./Navlink.astro";

const links = [
	{ href: "/", label: "Home" },
	{ href: "/work/", label: "Work" },
	{ href: "/about/", label: "About" },
];
---

<header class="container mx-auto py-4 md:px-6 px-3 flex justify-between">
	<h4 class="font-bold"><a href="/">{SITE_NAME}</a></h4>
	<ul class="md:space-x-6 space-x-3 flex">
		{links.map(({ href, label }) => <Navlink href={href} label={label} />)}
	</ul>
</header>
